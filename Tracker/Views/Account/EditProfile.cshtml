<!-- sign up area start -->
<section class="signup__area po-rel-z1 pt-100 pb-145">

    <div class="container">
        <div class="row">
            <div class="col-xxl-8 offset-xxl-2 col-xl-8 offset-xl-2">
                <div class="section__title-wrapper text-center mb-55">
                    <h2 class="section__title">Edit your Account</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-8 offset-lg-2">
                <div class="sign__wrapper white-bg">
                    <div class="sign__form">
                        <form asp-action="EditProfile" asp-controller="Account" method="post" enctype="multipart/form-data">
                            <div class="sign__input-wrapper mb-25">
                                <h5>Name</h5>
                                <div class="sign__input">
                                    <input asp-for="Name" placeholder="Enter Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <i class="fal fa-envelope"></i>

                                </div>
                            </div>

                            <div class="sign__input-wrapper mb-25">
                                <h5>Email</h5>
                                <div class="sign__input">
                                    <input asp-for="Email" placeholder="e-mail address">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <i class="fal fa-envelope"></i>
                                </div>
                            </div>


                            <div class="sign__input-wrapper mb-10">
                                <h5>Mobile</h5>
                                <div class="sign__input">
                                    <input asp-for="Mobile" placeholder="Mobile Number">
                                    <i class="fal fa-mobile"></i>

                                </div>
                            </div>
                            <div class="sign__input-wrapper mb-10">
                                <h5>Gender</h5>
                                <div class="sign__input">
                                    <select asp-for="Gender" class="form-control sign__select" asp-items="@Html.GetEnumSelectList<EnumsList.Genders>()" placeholder="Select Gender">
                                        <option value="" disabled selected>
                                            Select Gender
                                        </option>

                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <h5>Current Profile Picture</h5>
                                <img src="@Url.Content("~/Uploads/" + Model.ProfileImage)" alt="Profile Image" width="100" height="100" />
                                <h5>Select New Profile Picture </h5>
                                <input asp-for="ProfileImageFile" type="file" class="form-control" />
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>