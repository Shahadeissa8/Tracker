@model ApplicationUser
<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Educal – Online Learning and Education HTML5 Template </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Place favicon.ico in the root directory -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets1/img/favicon.png">
    <!-- CSS here -->
    <link rel="stylesheet" href="~/assets1/css/preloader.css">
    <link rel="stylesheet" href="~/assets1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets1/css/meanmenu.css">
    <link rel="stylesheet" href="~/assets1/css/animate.min.css">
    <link rel="stylesheet" href="~/assets1/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets1/css/swiper-bundle.css">
    <link rel="stylesheet" href="~/assets1/css/backToTop.css">
    <link rel="stylesheet" href="~/assets1/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/assets1/css/fontAwesome5Pro.css">
    <link rel="stylesheet" href="~/assets1/css/elegantFont.css">
    <link rel="stylesheet" href="~/assets1/css/default.css">
    <link rel="stylesheet" href="~/assets1/css/style.css">
</head>
<body>
    <main>

        <!-- instructor details area start -->
        <section class="teacher__area pt-100 pb-110">
            <div class="page__title-shape">
                <img class="page-title-shape-5 d-none d-sm-block" src="~/assets1/img/page-title/page-title-shape-1.png" alt="">
                <img class="page-title-shape-6" src="~/assets1/img/page-title/page-title-shape-6.png" alt="">
                <img class="page-title-shape-3" src="~/assets1/img/page-title/page-title-shape-3.png" alt="">
                <img class="page-title-shape-7" src="~/assets1/img/page-title/page-title-shape-4.png" alt="">
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-6">
                        <div class="teacher__details-thumb p-relative w-img pr-30">
                            <img src="~/Uploads/@Model.ProfilePicture" alt="Instructor Profile Image">
                            <div class="teacher__details-shape">
                                <img class="teacher-details-shape-1" src="~/assets1/img/teacher/details/shape/shape-1.png" alt="">
                                <img class="teacher-details-shape-2" src="~/assets1/img/teacher/details/shape/shape-2.png" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-xxl-8 col-xl-8 col-lg-8">
                        <div class="teacher__wrapper">
                            <div class="teacher__top d-md-flex align-items-end justify-content-between">
                                <div class="teacher__info">
                                    <h4>@Model.Name</h4>
                                    <span>@Model.Email</span>
                                </div>
                                <div class="teacher__rating">
                                    <h5>Balance :</h5>
                                    <div class="teacher__rating-inner d-flex align-items-center">
                                        <ul>
                                            <li><a href="#"> <i class="icon_star"></i> </a></li>
                                            <li><a href="#">  @Model.Name </a></li> @*Add Balance HERE  *@ 
                                            @* <h5>@Context.Session.GetString("UserBalance"), balance: @Model.Amount KD</h5> *@
                                            <h5>@Context.Session.GetString("UserBalance") KD</h5>

                                        </ul>
                                    </div>
                                </div>
                                <div class="teacher__rating">
                                    <h5>Mobile</h5>
                                    <div class="teacher__rating-inner d-flex align-items-center">
                                        <ul>
                                            <li><a href="#">  @Model.PhoneNumber </a></li> @*Add Balance HERE  *@


                                        </ul>
                                    </div>
                                </div>
                                <div class="teacher__follow mb-5">
                                    <a asp-action="EditProfile" asp-controller="Account" class="teacher__follow-btn">Edit your profile  </a>
                                </div>
                            </div>
                            <div class="teacher__bio">
                                <h3>Short Bio</h3>
                                <p> FOR NOOR.</p>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- instructor details area end -->


    </main>
    +
    <!-- JS here -->
    <script src="~/assets1/js/vendor/jquery-3.5.1.min.js"></script>
    <script src="~/assets1/js/vendor/waypoints.min.js"></script>
    <script src="~/assets1/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets1/js/jquery.meanmenu.js"></script>
    <script src="~/assets1/js/swiper-bundle.min.js"></script>
    <script src="~/assets1/js/owl.carousel.min.js"></script>
    <script src="~/assets1/js/jquery.fancybox.min.js"></script>
    <script src="~/assets1/js/isotope.pkgd.min.js"></script>
    <script src="~/assets1/js/parallax.min.js"></script>
    <script src="~/assets1/js/backToTop.js"></script>
    <script src="~/assets1/js/purecounter.js"></script>
    <script src="~/assets1/js/ajax-form.js"></script>
    <script src="~/assets1/js/wow.min.js"></script>
    <script src="~/assets1/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/assets1/js/main.js"></script>
</body>
</html>
