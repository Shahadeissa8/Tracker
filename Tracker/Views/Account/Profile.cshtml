profile

@model ApplicationUser


<div class="container d-flex justify-content-center align-items-center">
    <div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title"> @Model.Name</h5>
            <p class="card-text">
                <img src="@Url.Content( Model.ProfilePicture)" class="card-img-top" alt="Profile Picture" style="width: 100%; height: auto; border-radius: 50%;" />
            </p>
            <p class="card-text">Name: @Model.Name</p>
        <p class="card-text">Phone: @Model.PhoneNumber</p>
        <p class="card-text">Gender: @Model.Gender</p>
        <p class="card-text">Email: @Model.Email</p>
                    <div class="d-flex justify-content-between">
        <a asp-action="AllUsers" asp-controller="Account" asp-route-id="@Model.Id" class="btn btn-primary">Return to All Users</a>
        <a asp-action="EditProfile" asp-controller="Account" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
        </div>
        </div>
    </div>
</div>