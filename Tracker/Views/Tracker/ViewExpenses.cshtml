@model SearchViewModel
@{
}

<!-- Stylesheets -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

<style>
    /* Custom Theme Colors */
    .bg-gradient-primary {
        background: linear-gradient(90deg, #1E3A8A, #0D6EFD); /* Blue Gradient */
    }

    .text-orange {
        color: #FFA500; /* Orange Text */
    }

    .btn-orange {
        background-color: #FFA500; /* Orange Button */
        color: white;
        border: none;
        border-radius: 5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-orange:hover {
            background-color: #FF8C00; /* Darker Orange on Hover */
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

    .btn-blue {
        background-color: #1E3A8A; /* Blue Button */
        color: white;
        border: none;
        border-radius: 5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-blue:hover {
            background-color: #162e6b; /* Darker Blue on Hover */
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

    /* Table Styling */
    .table-hover tbody tr:hover {
        background-color: #f1f8ff; /* Light Blue Hover */
    }

    .table-bordered {
        border-color: #ddd;
    }

    /* Alert Styling */
    .alert-info {
        background-color: #e6f7ff; /* Light Blue Background */
        border-color: #91d5ff;
        color: #1890ff;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Card Container */
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Search Input */
    #myInput {
        border: 2px solid #1E3A8A; /* Blue Border */
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    /* Back Button */
    .btn--radius-2 {
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: bold;
    }

    .btn--blue {
        background-color: #1E3A8A;
        color: coral;
        border: none;
    }

        .btn--blue:hover {
            background-color: #162e6b; /* Darker Blue on Hover */
        }
</style>

<!-- Main Content -->
<div class="container mt-5">


    <!-- Remaining Budget Alert -->
    <div class="alert alert-info text-center">
        <strong>Remaining Budget:</strong> @Model.Amount
    </div>

    <!-- Search Bar -->
    <div class="mb-4">
        <input class="form-control" id="myInput" type="text" placeholder="Search expenses...">
    </div>

    <!-- Expense Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table id="myTable" class="table table-bordered table-hover">
                <thead class="bg-gradient-primary text-blue">
                    <tr>
                        <th>Name of Expense</th>
                        <th>Expense Amount</th>
                        <th>Currency</th>
                        <th>Expense Date</th>
                        <th>Expense Description</th>
                        <th>Expense Recurrence</th>
                        <th>Currency</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ExpensesList != null && Model.ExpensesList.Any())
                    {
                        @foreach (var expense in Model.ExpensesList)
                        {
                            <tr>
                                <td>@expense.ExpenseName</td>
                                <td>@expense.ExpenseAmount</td>
                                <td>@expense.Curency</td>
                                <td>@expense.ExpenseDate.ToString("yyyy-MM-dd")</td>
                                <td>@expense.ExpenseDescription</td>
                                <td>@expense.Recurring</td>
                                <td>@Enum.GetName(typeof(Tracker.Models.ViewModels.EnumsList.Currencies), expense.Curency)</td>
                                <td>
                                    <form method="post" asp-action="Delete" asp-route-id="@expense.ExpenseId" onsubmit="return confirm('Are you sure you want to delete this expense?');">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No expenses found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Back Button -->
<div class="text-center mt-4">
    <a asp-action="Index" asp-controller="Home" class="btn btn--radius-2 btn--blue">Back to Home</a>
</div>

<!-- Script for Search Filtering -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });
</script>
